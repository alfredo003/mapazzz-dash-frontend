        <div class="login-header">
            <img src="/img/logo.png" style="width: 200px;">
            <p>Fa√ßa login para acessar o painel</p>
        </div> 
     
        <% if (error && error.length > 0) { %>
            <div class="alert alert-danger"> <small><%= error %></small> </div>
        <% } %>
        <form class="login-form" id="loginForm" action="/login" method="POST">
            <div class="form-group">
                <input type="email" id="email" name="email" class="form-control" placeholder="Email" required>
                <i class="fas fa-envelope"></i>
            </div>
            <div class="form-group">
                <input type="password" id="password" name="password" class="form-control" placeholder="Senha" required>
                <i class="fas fa-lock"></i>
            </div>
            <div class="remember-forgot">
                <label class="remember-me">
                    <input type="checkbox" id="remember">
                    Lembrar-me
                </label>
                <a href="/recuperar" class="forgot-password">Esqueceu a senha?</a>
            </div>
            <button type="submit" class="btn">
                Entrar
                <div class="spinner"></div>
            </button>
            <div class="error-message" id="errorMessage"></div>
        </form>

